{
  "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/carList/carList",
      "style": {

        "enablePullDownRefresh": true,
        "onReachBottomDistance": 200
      }
    }, {
      "path": "pages/careerMaps/careerMaps",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/seasonPass/seasonPass",
      "style": {
        "enablePullDownRefresh": true
      }

    },

    {
      "path": "pages/contest/contest",
      "style": {
        "enablePullDownRefresh": true,
        "onReachBottomDistance": 200
      }
    }, {
      "path": "pages/seasonPass/missionMapQuery/missionMapQuery",
      "style": {
        "navigationBarTitleText": "任务地图指引",
        "enablePullDownRefresh": false
      }

    }, {
      "path": "pages/contest/queryFeaturedCars/queryFeaturedCars",
      "style": {
        "navigationBarTitleText": "精选车辆",
        "enablePullDownRefresh": false
      }

    }
  ],

  "globalStyle": {
    //QQ未支持深色模式
    // #ifdef  MP-WEIXIN
    "navigationBarTextStyle": "@navTxtStyle",
    "navigationBarBackgroundColor": "@navBgColor",
    "backgroundColor": "@bgColor",
    // #endif
    // #ifdef MP-QQ
    "navigationBarTextStyle": "black",
    "navigationBarBackgroundColor": "#fff",
    "backgroundColor": "#F5F5F5",
    // #endif
    "navigationBarTitleText": "狂飙小助手"
  },

  "tabBar": {
    "color": "#000",
    "backgroundColor": "#fff",
    "selectedColor": "#FF0054",
    "list": [{
        "pagePath": "pages/carList/carList",
        "iconPath": "static/tabbar-icons/car.png",
        "selectedIconPath": "static/tabbar-icons/car-selected.png",
        "text": "车辆"
      },
      {
        "pagePath": "pages/careerMaps/careerMaps",
        "iconPath": "static/tabbar-icons/flag.png",
        "selectedIconPath": "static/tabbar-icons/flag-selected.png",
        "text": "地图"
      },
      {
        "pagePath": "pages/seasonPass/seasonPass",
        "iconPath": "static/tabbar-icons/pass.png",
        "selectedIconPath": "static/tabbar-icons/pass-selected.png",
        "text": "通行证"
      },
      {
        "pagePath": "pages/contest/contest",
        "iconPath": "static/tabbar-icons/fire.png",
        "selectedIconPath": "static/tabbar-icons/fire-selected.png",
        "text": "赛事"
      }
    ]
  }
}
